# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recommendation_engine
POSTGRES_USER=rec_user
POSTGRES_PASSWORD=secure_password
DATABASE_URL=postgresql://rec_user:secure_password@localhost:5432/recommendation_engine

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379/0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_INTERACTIONS=user_interactions
KAFKA_TOPIC_RECOMMENDATIONS=recommendations
KAFKA_CONSUMER_GROUP=rec_engine_group

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=jwt-secret-key-change-this-too
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Machine Learning Configuration
MODEL_UPDATE_INTERVAL=3600 # seconds
MIN_INTERACTIONS_FOR_CF=10
DEFAULT_RECOMMENDATION_COUNT=10
MAX_RECOMMENDATION_COUNT=100

# Algorithm Weights (optimized via genetic algorithm)
COLLABORATIVE_WEIGHT=0.5
CONTENT_WEIGHT=0.3
SOCIAL_WEIGHT=0.2

# LSH Configuration
LSH_THRESHOLD=0.5
LSH_NUM_PERM=128

# Content-Based Filtering
TFIDF_MAX_FEATURES=10000
TFIDF_NGRAM_RANGE_MIN=1
TFIDF_NGRAM_RANGE_MAX=2
TFIDF_MIN_DF=5
TFIDF_MAX_DF=0.8

# Caching Configuration
CACHE_TTL_RECOMMENDATIONS=900   # 15 minutes
CACHE_TTL_USER_PROFILE=1800     # 30 minutes
CACHE_TTL_ITEM_SIMILARITY=86400 # 24 hours
CACHE_TTL_POPULAR_ITEMS=3600    # 1 hour

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_MODELS=rec-engine-models
MINIO_BUCKET_DATA=rec-engine-data
MINIO_SECURE=false

# AWS Configuration (if using AWS instead of MinIO)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_MODELS=rec-engine-models
S3_BUCKET_DATA=rec-engine-data

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
WORKER_COUNT=4
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600 # 1 hour

# A/B Testing
AB_TESTING_ENABLED=true
DEFAULT_TRAFFIC_SPLIT=0.5

# Development/Production Mode
ENVIRONMENT=development
DEBUG=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400 # 24 hours
BACKUP_RETENTION_DAYS=30
